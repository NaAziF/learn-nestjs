generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Chat {
  MessageId     String   @id @default(auto()) @map("_id") @db.ObjectId
  CreatedAt     DateTime @default(now())
  UpdatedAt     DateTime @updatedAt
  SenderId      Int
  RecieverId    Int
  MessageStatus Int      @default(0)
  Message       String?
  Attachments   Json?
}
